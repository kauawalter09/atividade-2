void main(){
  double peso = 85;
  
if(peso <= 60){
  print('P');
}else if(peso <= 74){
  print('M');
}else if(peso <= 85){
  print('G');
}else if(peso >= 86){
  print('GG');
}
 
}

atividade 11
////////////

void main() {
  var salarioAntigo = 1000;
  var dissidio = 4;
  var porcentagem = 1000 / 100 * dissidio;
  var salarioNovo = salarioAntigo + porcentagem;
  
double tempo = 1;
  
  
  
  if(tempo >= 1){
   print(salarioNovo);
  }else{
    print('Funcionário com menos de 1 ano de empresa');
  }
    

  
}
